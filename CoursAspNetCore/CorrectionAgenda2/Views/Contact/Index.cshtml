@model List<Contact>
@{ 
    ViewData["Title"] = "Liste des contacts";

}
<div class="container table">
    @if(ViewBag.error != null && !ViewBag.error)
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    Contact ajouté
                </div>
            </div>
        </div>

    }
    @if(Model.Count > 0)
    {
        <div class="row">
            <div class="col">
                Avatar
            </div>
            <div class="col">
                Nom
            </div>
            <div class="col">
                Prénom
            </div>
            <div class="col">
                Tél
            </div>
            <div class="col">

            </div>
        </div>
        @foreach(Contact c in Model)
        {
            <div class="row">
                <div class="col">
                    <img src="~/images/Avatars/@c.Avatar" width="100"/>
                </div>
                <div class="col">
                    @c.Nom
                </div>
                <div class="col">
                    @c.Prenom
                </div>
                <div class="col">
                    @c.Tel
                </div>
                <div class="col">
                    <a asp-controller="Contact" asp-route-id="@c.Id" asp-action="DetailContact"><i class="fas fa-search"></i></a>
                    <a asp-controller="Contact" asp-route-id="@c.Id" asp-action="AddEmail"><i class="fas fa-envelope"></i></a>
                    <a asp-controller="Contact" asp-route-id="@c.Id" asp-action="DeleteContact"><i class="fas fa-trash"></i></a>
                    <a asp-controller="Contact" asp-route-id="@c.Id" asp-action="EditContact"><i class="fas fa-edit"></i></a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col">
                Auncun contact
            </div>
        </div>
    }
</div>