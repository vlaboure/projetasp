@model User
@{ 
    ViewData["Title"] = "S'enregistrer";
}
<div class="container">
    <form asp-action="Register" asp-controller="User" method="post">
        <div class="row">
            <div class="col-lg-12">
                <input asp-for="UserName" value="@ViewBag.UserName" placeholder="Votre identifiant" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <input asp-for="Password" value="@ViewBag.Password" type="password" placeholder="Votre mot de passe" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <input type="submit" name="save" value="Enregistrer" class="form-control btn btn-success" />
            </div>
            <div class="col-lg-6">
                <input type="submit" name="valid" value="Valider" class="form-control btn btn-success" />
            </div>
        </div>
    </form>
</div>