<div class="container">
    <form asp-action="Login" asp-controller="User" method="post">
        <div class="row">
            <div class="col-lg-12">
                <input type="text" name="username" placeholder="Votre identifiant" class=" form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <input type="password" name="password" placeholder="Votre mot de passe" class=" form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="form-control btn btn-danger">Se connecter</button> 
            </div>
        </div>
    </form>
    
</div>
