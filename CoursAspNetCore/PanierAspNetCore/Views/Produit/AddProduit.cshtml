@model Produit
@{ 
    ViewData["Title"] = "Ajouter un produit";
}
<div class="container">
    <form enctype="multipart/form-data" asp-controller="Produit" asp-action="AddProduit" method="post">
        <div class="row">
            <div class="col-lg-3">
                <label asp-for="Titre"></label>
            </div>
            <div class="col-lg-9">
                <input asp-for="Titre" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label asp-for="Prix"></label>
            </div>
            <div class="col-lg-9">
                <input asp-for="Prix" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label asp-for="Image"></label>
            </div>
            <div class="col-lg-9">
                <input type="file" name="image" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="form-control btn btn-danger">Ajouter produit</button>
            </div>
        </div>
    </form>
</div>